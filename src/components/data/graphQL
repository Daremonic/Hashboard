const space = `query {
  space(id: "zettahash.eth") {
    id
    name
    about
    network
    symbol
    members
    admins
    activeProposals
    proposalsCount
    avatar
    strategies {
      network
      params
    }
  }
}`

const proposals = `
query {
  proposals (
    first: 20,
    skip: 0,
    where: {
      space_in: ["zettahash.eth"],
      state: "closed"
    },
    orderBy: "created",
    orderDirection: desc
  ) {
    id
    title
    body
    choices
    start
    end
    snapshot
    state
    scores
    scores_by_strategy
    scores_total
    scores_updated
    author
    space {
      id
      name
    }
  }
}`

export {space, proposals}